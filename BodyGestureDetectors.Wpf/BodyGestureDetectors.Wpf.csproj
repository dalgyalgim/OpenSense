        <AssemblyName>OpenSense.Wpf.Component.BodyGestureDetectors</AssemblyName>
        <RootNamespace>OpenSense.Wpf.Component.BodyGestureDetectors</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="System.Composition" Version="6.0.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\BodyGestureDetectors\BodyGestureDetectors.csproj" />
        <ProjectReference Include="..\WpfComponentContract\WpfComponentContract.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Page Update="BodyAttitudeDetectorConfigurationControl.xaml">
