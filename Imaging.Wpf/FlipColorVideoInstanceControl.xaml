<UserControl x:Class="OpenSense.Wpf.Component.Imaging.FlipColorVideoInstanceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenSense.Wpf.Component.Imaging"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <CheckBox IsChecked="{Binding FlipHorizontal}">Flip Horizontal</CheckBox>
        <CheckBox IsChecked="{Binding FlipVertical}">Flip Vertical</CheckBox>
    </StackPanel>
</UserControl>
